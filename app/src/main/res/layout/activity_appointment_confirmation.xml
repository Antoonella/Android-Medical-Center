<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".AppointmentConfirmationActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_marginTop="60dp" android:layout_centerHorizontal="true"
            android:id="@+id/etCoName" android:hint="Patient Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/etCoName"
            android:id="@+id/etCoEmail" android:layout_centerHorizontal="true" android:hint="Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_below="@+id/etCoEmail" android:id="@+id/etCoMobile"
            android:hint="Phone Number"/>
    <Button
            android:text="Send Email"
            android:layout_width="94dp"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="117dp"
            android:id="@+id/btnSendEmail" android:layout_alignEnd="@+id/etCoName"
            android:layout_alignRight="@+id/etCoName"/>
    <Button
            android:text="Send SMS"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnSendEmail" android:id="@+id/btnSendSms"
            android:layout_alignStart="@+id/etCoName" android:layout_alignLeft="@+id/etCoName"/>
    <TextView
            android:text="Appointment Confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="195dp" android:id="@+id/textView" android:layout_centerHorizontal="true"/>
</RelativeLayout>