<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">


    <Button
            android:text="Patient"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPatient"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:onClick="onClick" android:layout_alignParentBottom="true" android:layout_marginBottom="148dp"/>
    <Button
            android:text="Receptionist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReceptionist"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:onClick="rOnClick"/>
    <TextView
            android:text="MEDICAL CENTRE"
            android:layout_width="257dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="54dp"
            android:id="@+id/etName"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textColor="@android:color/background_dark"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>